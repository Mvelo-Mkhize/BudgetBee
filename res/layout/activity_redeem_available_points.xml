<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />


    <TextView
        android:id="@+id/textViewAvailablePoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Points: 9,420"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="8dp"
        android:background="#EEE"
        android:layout_marginBottom="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnAllPerks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Perks" />

        <Button
            android:id="@+id/btnMyPerks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Perks"
            android:layout_marginStart="16dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/starbucks"
            android:contentDescription="Starbucks Coffee Perk"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Coffee at Starbucks"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get 1 free coffee or large ink when you redeem this perk"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnRedeemStarbucks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem for 200 Points"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="Free Coffee Image"
        android:src="@drawable/Starbucks" />
</LinearLayout>
