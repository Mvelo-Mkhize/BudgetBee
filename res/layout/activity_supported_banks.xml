<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SupportedBanks">


    <!-- Header Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global Banks"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Subtitle (Optional) -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can use these banks for transactions:"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- List of Banks (Using TextViews) -->
    <TextView
        android:id="@+id/bank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Bank of America"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bank2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Chase Bank"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bank1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bank3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Wells Fargo"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bank2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bank4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Citibank"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bank3"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bank5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. U.S. Bank"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bank4"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Optional: Footer Note -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact support for more information."
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/bank5"
        app:layout_constraintStart_toStartOf="parent"/>

</LinearLayout>